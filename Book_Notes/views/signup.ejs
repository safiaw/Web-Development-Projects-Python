<%- include('partials/header.ejs') %>

<h1>Do not have an account? Please signup.</h1>
<form role="form" action="/signup" method="post">

    <div class="form-group">
      <label for="fullname">Fullname</label>
      <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Enter your fullname">
    </div>
    <div class="form-group">
      <label for="emailaddress">Email</label>
      <input type="email" class="form-control" id="emailaddress" name="email" placeholder="Enter your email">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="text" class="form-control" id="Password" name="password" placeholder="Enter a new password">
        <small id="passwordrules" class="form-text text-muted">Password must be atleast 8 characters long. It must include atleast one of these characters - A-Z,a-z,0-9,@$%&*</small>
    </div>
    <div class="form-group">
        <label for="rpassword">Re-enter password</label>
        <input type="text" class="form-control" id="rpassword" name="rpassword" placeholder="Re-enter the password">
    </div>
    <button type="submit" class="btn btn-primary" id="submit">Submit</button>
    <a class="btn btn-primary" href="/signup" role="button" id="cancel">Cancel</a>

</form>

<%- include('partials/footer.ejs') %>
